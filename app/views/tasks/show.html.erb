<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<h3><%= if @task.completed
      @status = 'Done'
    else
      @status = 'To do'
    end %></h3>
<p><%= link_to 'Edit task', edit_task_path %></p>
<%= link_to "Delete task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<p><%= link_to 'Back to all tasks', tasks_path %></p>
